@model WebBeacon.Models.MyBeaconViewModel

@{
    ViewData["Title"] = "My Beacons";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="list-group">
                    <a href="#" class="list-group-item active">
                        <i class="glyphicon glyphicon-dashboard"></i> Dashboard
                    </a>
                    <a href="#" class="list-group-item"><i class="glyphicon glyphicon-file"></i> Pages</a>
                    <a href="#" class="list-group-item"><i class="glyphicon glyphicon-folder-open"></i> Categories</a>
                    <a href="#" class="list-group-item"><i class="glyphicon glyphicon-user"></i> User Accounts</a>
                </div>
            </div>
            <div class="col-md-8">
                <h1 class="page-header"><i class="glyphicon glyphicon-dashboard"></i> Dashboard</h1>
                <h3>Aangemaakte Beacons</h3>
                <table class="table table-striped">
                    <tr>
                        <th>Html markup</th>
                        <th>Beacon naam</th>
                        <th>Actie</th>
                        
                    </tr>
                    <tr>
                        @foreach (var beacon in Model.UsersBeacons) {
                        
                        <td>
                            <a href="#">Tonen markup</a>
                        </td>
                        
                        <td> @beacon.BeaconName</td>

                        <td> <a href="#">Details</a> <a href="#">Verwijderen</a> </td>

                        }

                    </tr>
                    <tr>
                </table>
                <a class="btn btn-default pull-right" href="pages.html"><i class="glyphicon glyphicon-plus"></i> Nieuw</a>
                <hr>

                <h3>Beacon informatie</h3>
                <table class="table table-striped">
                    <tr>
                        <th>Source IP</th>
                        <th>Occurance</th>
                    </tr>
                    <tr>
                        
                        @if(Model.FirstBeaconHit != null) { 
                        <td>
                            <a href="user.html">Brad Traversy</a>
                        </td>
                        <td>techguyinfo@gmail.com</td>
                        <td>Admin</td>
                        } else {
                            
                            <td> Beacon heeft nog geen hits ontvangen. </td>
                        }
                    </tr>
                </table>
                <a class="btn btn-default" href="users.html">View All Users</a>
            </div>
        </div>
    </div>
</section>