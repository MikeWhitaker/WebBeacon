@model WebBeacon.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="panel panel-primary">
    <div class="panel-heading text-center"><h2>Registeer nieuw account</h2></div>
    <div class="panel-body">
        <form class="p-a-1" asp-action="Register" method="post">

            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Name">Naam:</label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Your email:</label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Wachtwoord:</label>
                <input class="form-control" asp-for="Password" />
            </div>

            <div class="form-group">
                <label asp-for="PasswordRepeat">Wachtwoord herhalen:</label>
                <input class="form-control" asp-for="PasswordRepeat" />
                <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
            </div>

            <div class="text-center pull-right">
                <button class="btn btn-primary" type="submit">
                    Maak account
                </button>
            </div>
        </form>
    </div>
</div>




